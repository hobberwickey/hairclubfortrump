source 'https://rubygems.org'
ruby '2.0.0'
#ruby=ruby-2.0.0-p451
#ruby-gemset=hair

gem 'activerecord', '>= 4.2.0'                      # ORM
gem 'aws-sdk', '< 2.0'                              # para AWS
gem 'bcrypt'                                        # crypt library
gem 'dotenv'                                        # for local environment variables
gem 'paperclip-rack', require: 'paperclip/rack'     # handling image uploads
gem 'pg'                                            # DB
gem 'rake'                                          # Ruby Make
gem 'rmagick'                                       # resizing images
gem 'sinatra'                                       # classy Web framework
gem 'sinatra-contrib', require: false               # for reloading
gem 'sinatra-flash'                                 # flash messages
gem 'aws-ses'                                       # email
gem 'will_paginate', '~> 3.0.6'                     # paginate requests
gem 'sass'                                          # because sass is awesome

group :development do
  gem 'shotgun'                                     # reloading web server
end